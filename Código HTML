<body>
    <div class="chat-container">
        <div class="chat-header">
            <h2>ü§ñ Assistente de Benef√≠cios</h2>
            <p>Ol√°! Pergunte sobre seus benef√≠cios. Ex: "Qual o plano de sa√∫de?"</p>
        </div>
        <div class="chat-messages" id="messages">
            <div class="message bot">
                <div class="message-content">Ol√°, colaborador! Estou aqui para tirar d√∫vidas sobre benef√≠cios. Digite sua pergunta!</div>
            </div>
        </div>
        <div class="chat-input">
            <input type="text" id="userInput" placeholder="Digite sua d√∫vida..." onkeypress="handleKeyPress(event)">
            <button onclick="sendMessage()">Enviar</button>
        </div>
    </div>

    <script>
        const responses = {
            'sa√∫de': 'Nosso plano de sa√∫de cobre consultas, interna√ß√µes e medicamentos. Cobertura a partir do 1¬∫ m√™s. Contate RH para ades√£o.',
            'alimenta√ß√£o': 'Vale-alimenta√ß√£o: R$ 600/m√™s. Usado em supermercados e restaurantes credenciados.',
            'transporte': 'Vale-transporte cobre 100% do trajeto casa-trabalho. Cadastre seu endere√ßo no RH.',
            'f√©rias': '30 dias de f√©rias remuneradas ap√≥s 12 meses. Agende com seu supervisor.',
            '13¬∫': '13¬∫ sal√°rio integral, pago em duas parcelas (nov/dez).',
            'seguro': 'Seguro de vida com cobertura de R$ 50.000 em caso de falecimento.',
            'default': 'Desculpe, n√£o entendi. Pergunte sobre: sa√∫de, alimenta√ß√£o, transporte, f√©rias, 13¬∫ ou seguro. Ou contate o RH!'
        };

        function sendMessage() {
            const input = document.getElementById('userInput');
            const message = input.value.trim().toLowerCase();
            if (!message) return;

            addMessage('user', input.value);
            input.value = '';

            setTimeout(() => {
                addTyping();
                setTimeout(() => {
                    removeTyping();
                    const keys = Object.keys(responses);
                    const responseKey = keys.find(key => message.includes(key)) || 'default';
                    addMessage('bot', responses[responseKey]);
                }, 1000);
            }, 500);
        }

        function addMessage(sender, text) {
            const messages = document.getElementById('messages');
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}`;
            messageDiv.innerHTML = `<div class="message-content">${text}</div>`;
            messages.appendChild(messageDiv);
            messages.scrollTop = messages.scrollHeight;
        }

        function addTyping() {
            const messages = document.getElementById('messages');
            const typingDiv = document.createElement('div');
            typingDiv.className = 'message bot';
            typingDiv.innerHTML = '<div class="message-content typing">Digitando...</div>';
            messages.appendChild(typingDiv);
            messages.scrollTop = messages.scrollHeight;
        }

        function removeTyping() {
            const messages = document.getElementById('messages');
            const lastChild = messages.lastElementChild;
            if (lastChild && lastChild.querySelector('.typing')) {
                messages.removeChild(lastChild);
            }
        }

        function handleKeyPress(event) {
            if (event.key === 'Enter') sendMessage();
        }
    </script>
